<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>EspacoAluno</servlet-name>
        <servlet-class>EspacoAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspacoProfessor</servlet-name>
        <servlet-class>EspacoProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EspacoCoordenador</servlet-name>
        <servlet-class>EspacoCoordenador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarProfessores</servlet-name>
        <servlet-class>ListarProfessores</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EspacoAluno</servlet-name>
        <url-pattern>/EspacoAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspacoProfessor</servlet-name>
        <url-pattern>/EspacoProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EspacoCoordenador</servlet-name>
        <url-pattern>/EspacoCoordenador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarProfessores</servlet-name>
        <url-pattern>/ListarProfessores</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>AcessoAluno</display-name>
        <web-resource-collection>
            <web-resource-name>EspacoAluno</web-resource-name>
            <description/>
            <url-pattern>/EspacoAluno</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Aluno</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AcessoProf</display-name>
        <web-resource-collection>
            <web-resource-name>EspacoProfessor</web-resource-name>
            <description/>
            <url-pattern>/EspacoProfessor</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Professor</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>AcessoCoord</display-name>
        <web-resource-collection>
            <web-resource-name>EspacoCoordenador</web-resource-name>
            <description/>
            <url-pattern>/EspacoCoordenador</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>menuCoord</web-resource-name>
            <description/>
            <url-pattern>/menuCord.html</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>coord</web-resource-name>
            <description/>
            <url-pattern>/coord/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Coordenador</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/FormularioLogin.html</form-login-page>
            <form-error-page>/formularioErro.html</form-error-page>
        </form-login-config>
    </login-config>
 <error-page>
     <erro-code>403</erro-code>
     <location>/formularioErro.html</location>
 </error-page>
    <security-role>
        <description/>
        <role-name>Aluno</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Professor</role-name>
    </security-role>
    <security-role>
        <description>Coordenador de curso</description>
        <role-name>Coordenador</role-name>
    </security-role>
</web-app>
